{
  "name": "song-slicer",
  "version": "0.1.2",
  "description": "Display the form of a piece of music by highlighting and labeling various regions.",
  "productName": "Song-Slicer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "first-run": "bash scripts/first-run.sh",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node Scripts/postinstall.js"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "resources/icons/EAMIR",
        "appId": "org.eamir.song-slicer",
        "appBundleId": "org.eamir.song-slicer",
        "appCategoryType": "public.app-category.music",
        "extraResource": [
          "app-update.yml"
        ],
        "ignore": [
          "^/venv($|/)"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "resources/icons/EAMIR.icns"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "setupIcon": "resources/icons/EAMIR.ico"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "EAMIRorg",
              "name": "Song-Slicer"
            }
          }
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibsonPhillips/Horisontol-Song-Segmentation-App-Final.git"
  },
  "author": "EAMIR",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/gibsonPhillips/Horisontol-Song-Segmentation-App-Final/issues"
  },
  "homepage": "http://eamir.org",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/publisher-github": "^7.8.3",
    "electron": "^33.2.1",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "appdata-path": "^1.0.0",
    "electron-updater": "^6.6.2",
    "file-saver": "^2.0.5",
    "node": "^23.11.1",
    "wavesurfer.js": "^7.8.16"
  }
}
